{
  "version": 2,
  "buildCommand": "vite build && npx prisma generate",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "src/**",
      "excludeFiles": "node_modules/**"
    }
  },
  "rewrites": [
    {
      "source": "/((?!api|auth).)*$",
      "destination": "/index.html"
    }
  ]
}
