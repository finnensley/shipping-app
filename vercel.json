{
  "version": 2,
  "buildCommand": "vite build && npx prisma generate",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "src/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/test-supabase-connection",
      "destination": "/api"
    },
    {
      "source": "/create-checkout-session",
      "destination": "/api"
    }
  ]
}
