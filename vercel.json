{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": "@database_url"
  },
  "builds": [
    {
      "src": "src/main.jsx",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/auth/(.*)", "dest": "server.js" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
